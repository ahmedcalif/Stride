<div class="py-4 d-flex justify-content-center">
    <nav class="bg-white px-4 py-3 rounded-4 shadow-sm">
      <ul class="nav gap-5">
        <li class="nav-item">
          <a href="/Dashboard" class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Dashboard" ? "text-primary" : "text-secondary") fs-5">Dashboard</a>
        </li>
        <li class="nav-item">
          <a href="/Goals" class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Goals" ? "text-primary" : "text-secondary") fs-5">Goals</a>
        </li>
        <li class="nav-item">
          <a href="/Habits" class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Habits" ? "text-primary" : "text-secondary") fs-5">Habits</a>
        </li>
        @if (User.IsInRole("Admin") || User.HasClaim(c => c.Type == "ActiveRole" && c.Value == "Admin"))
        {
          <li class="nav-item">
            <a href="/Admin/Users" class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Users" ? "text-primary" : "text-secondary") fs-5">Users</a>
          </li>
        }
        <li class="nav-item">
          <a href="/Settings" class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Settings" ? "text-primary" : "text-secondary") fs-5 d-flex align-items-center justify-content-center">Settings</a>
        </li>
      </ul>
    </nav>
</div>